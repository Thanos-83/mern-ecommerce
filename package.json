{
  "name": "ecommemrce-mern",
  "version": "1.0.0",
  "description": "Ecommerce online store",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server --ignore '/frontend' ",
    "client": "npm start --prefix frontend",
    "build": "npm cache clean && npm install && npm cache clean && npm install --legacy-peer-deps --prefix frontend && npm run build --prefix frontend",
    "dev": "concurrently \"npm run server \" \" npm run client \" ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d"
  },
  "author": "Thanos Smponias",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.35.0",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "http-proxy-middleware": "^1.0.6",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.11.10",
    "multer": "^1.4.2",
    "stripe": "^11.14.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "nodemon": "^2.0.6"
  }
}
